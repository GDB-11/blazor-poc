<div class="flex h-5 items-center">
    <input id="@Id" type="checkbox"
           class="h-4 w-4 rounded border border-gray-300 bg-gray-50 focus:ring-3 focus:ring-blue-300 dark:bg-gray-700 dark:border-gray-600 dark:ring-offset-gray-800 dark:focus:ring-blue-600 dark:focus:ring-offset-gray-800"
           value="@Value"
           @oninput="OnValueChanged"
           @attributes="@(IsRequired ? new Dictionary<string, object> { { "required", "required" } } : null)" />
</div>
<label for="@Id" class="ms-2 text-sm font-medium text-gray-900 dark:text-gray-300">@Label</label>
